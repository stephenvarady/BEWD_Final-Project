<%= form_for @shop do |f| %>
<form class="form-horizontal">
  <fieldset>
      <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :street, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :borough %>
        <%= f.select(:city, ["Manhattan", "Brooklyn", "Queens", "Bronx", "Staten Island"], {}, {class: "form-control"}) %>
      </div>
      <div class="form-group">
        <%= f.label :state %>
        <%= f.select(:state, ["New York", "New Jersey", "Connecticut"], {}, {class: "form-control"}) %>
      </div>
      <div class="form-group">
        <%= f.label :country %>
        <%= f.select(:country, ["United States"], {}, {class: "form-control"}) %>
      </div>
  </fieldset>
  <%= f.submit class: "btn btn-warning" %>
</form>
<% end %>