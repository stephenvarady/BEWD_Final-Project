	<thead>
		<th>
			<h4>The best roasters available near you:</h4>
		</th>
	</thead>
	<tbody>
		<% @roasters.each do |roaster|%>
			<tr>
				<td><%= link_to roaster.name, roaster %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Add New Roaster", new_roaster_path, class: "btn btn-success" %>